    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compile",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bask",
            "args": ["compile", "${workspaceFolder}/test/a.out", "${workspaceFolder}/test/test2.bsk", "${workspaceFolder}/test/test3.bsk"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Compile STD",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bask",
            "args": ["compile", "a.out", "str.bsk", "stack.bsk"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/std",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bask",
            "args": ["${workspaceFolder}/test/a.out", "${workspaceFolder}/test/test.bsk"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}