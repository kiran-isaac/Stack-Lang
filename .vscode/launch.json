    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compile",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/slang",
            "args": ["-s", "-o", "test.out", "-i", "/home/kiran/dev/slangvm/test/factorial.sl"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Compile STD",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/slang",
            "args": ["compile", "str.sl", "stack.sl", "-o", "std.o"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/std",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/slang",
            "preLaunchTask": "build",
            "args": ["-r", "-i", "${workspaceFolder}/test/a.out"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Portable",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/slang",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "args": ["-s", "-o", "test.out", "-i", "test/factorial.sl"],
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}